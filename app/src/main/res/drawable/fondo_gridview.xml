<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape>

            <gradient android:endColor="@color/cafe_oscuro"
                android:centerColor="@color/cafe_claro"
                android:startColor="@color/cafe_oscuro"/>

            <corners android:radius="12dp"/>
        </shape>

    </item>

    <item>

        <shape>
            <corners android:radius="12dp"/>
            <gradient android:endColor="@color/cafe_oscuro"
                android:centerColor="@android:color/transparent"
                android:startColor="@color/cafe_oscuro"
                android:angle="90"/>
            <stroke android:color="@color/cafe_clarot" android:width="1dp"/>
        </shape>
    </item>


</layer-list>